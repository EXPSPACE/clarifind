    <TextView
        android:id="@+id/locationCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HomeTown" />
    <TextView
        android:id="@+id/locationProv"
        android:layout_width="wrap_content"
