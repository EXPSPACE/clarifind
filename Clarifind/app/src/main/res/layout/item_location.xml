    <TextView
        android:id="@+id/locationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name" />

    <TextView
        android:id="@+id/locationStreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
